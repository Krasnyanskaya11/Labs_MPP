<p style="color: green"><%= notice %></p>

<h1>Patients</h1>

<div id="patients">
  <%= form_with(url: patients_path, method: :get) do |form| %>
    <%= form.text_field :query, placeholder: 'Search patients' %>
    <%= form.submit 'Search' %>
  <% end %>
  <% @patients.each do |patient| %>
    <%= render patient %>
    <table>

      <tbody>
      <tr><th>Name: </th>
        <td><%= patient.name %> </td> </tr>
      <tr><th>Surname : </th>
        <td><%= patient.surname %> </td> </tr>
      <tr><th>Phone : </th>
        <td><%= patient.phone %></td> </tr>
      <tr><th>BD : </th>
        <td><%= patient.bd %> </td> </tr>
      <tr><th>Email : </th>
        <td><%= patient.email %> </td> </tr>
      </tbody>
    </table>

      <%= link_to "Show this patient", patient %>

  <% end %>
  <%= will_paginate @clinics, renderer: WillPaginate::ActionView::LinkRenderer, class: 'pagination' %>
</div>
<p>
<%= link_to "New patient", new_patient_path %>
<%= link_to 'Main page', root_path %></p>
<p>
  Sort by:
  <%= link_to 'Name (asc)', { sort_field: 'name', sort_direction: 'asc' } %>
  <%= link_to 'Name (desc)', { sort_field: 'name', sort_direction: 'desc' } %>
  <%= link_to 'Created at (asc)', { sort_field: 'created_at', sort_direction: 'asc' } %>
  <%= link_to 'Created at (desc)', { sort_field: 'created_at', sort_direction: 'desc' } %>
