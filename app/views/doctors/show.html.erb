<p style="color: green"><%= notice %></p>

<%= render @doctor %>

<div>
  <h1>Doctor</h1>
  <p class="notice"><%= notice %></p>
  <div class="show-info">
  <p><strong>ID :</strong> <%= @doctor.id %></p>
  <p><strong>Name :</strong> <%= @doctor.name %></p>
  <p><strong>Surname :</strong> <%= @doctor.surname %></p>
  <p><strong>Department :</strong> <%= @doctor.department.name %></p>
  </div>



 <p> <%= link_to "Edit this doctor", edit_doctor_path(@doctor) %>
   <%= link_to "Back to list", doctors_path %></p>

 <%= button_to "Destroy this doctor", @doctor, method: :delete,class: "button" %>
</div>
