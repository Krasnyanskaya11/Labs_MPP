<p style="color: green"><%= notice %></p>


<h1>Clinics</h1>

<div id="clinics">
  <%= form_with(url: clinics_path, method: :get) do |form| %>
    <%= form.text_field :query, placeholder: 'Search clinics' %>
    <%= form.submit 'Search' %>
  <% end %>

  <% @clinics.each do |clinic| %>
    <%= render clinic %>
    <table>

      <tbody>
      <tr><th>Name: </th>
      <td><%= clinic.name %> </td> </tr>
      <tr><th>Address: </th>
      <td><%= clinic.address %></td> </tr>
      <tr><th>Phone: </th>
      <td><%= clinic.phone %></td>
      <tr><th>Year founded: </th>
      <td><%= clinic.year_founded %></td>

      </tbody>

      </table>
    <%= link_to "Show this clinic", clinic %>
  <% end %>

  <%= will_paginate @clinics, renderer: WillPaginate::ActionView::LinkRenderer, class: 'pagination' %>

</div>

<p><%= link_to "New clinic", new_clinic_path %></p>
<p><%= link_to 'Main page', root_path %></p>
<p>
  Sort by:
  <%= link_to 'Name (asc)', { sort_field: 'name', sort_direction: 'asc' } %>
  <%= link_to 'Name (desc)', { sort_field: 'name', sort_direction: 'desc' } %>
  <%= link_to 'Created at (asc)', { sort_field: 'created_at', sort_direction: 'asc' } %>
  <%= link_to 'Created at (desc)', { sort_field: 'created_at', sort_direction: 'desc' } %>
</p>