  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

  <link rel="canonical" href="https://getbootstrap.su/docs/5.1/examples/sign-in/">
  <!-- Подключение файлов стилей Bootstrap -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

  <!-- Подключение файлов скриптов Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

  <!-- Bootstrap core CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

  <!-- Favicons -->
  <meta name="msapplication-TileColor" content="#7952b3">
  <meta name="theme-color" content="#7952b3">

  <style>

    .password-form label {
        font-size: 16px;
        margin-bottom: 10px;

    }

    .password-form input[type="email"] {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid #ced4da;
        margin-bottom: 20px;
    }

    .password-form input[type="submit"] {
        background-color: #8c9eff;
        color: #ffffff;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        text-decoration: none;
        border: none;
        cursor: pointer;
    }


    .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: auto;}


</style>
</head>
<body class="text-center"  >
<main class="form-signin" >
  <h2>Forgot your password?

    <svg xmlns="http://www.w3.org/2000/svg" width="27" height="27" fill="currentColor" class="bi bi-emoji-frown" viewBox="0 0 16 16">
    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
    <path d="M4.285 12.433a.5.5 0 0 0 .683-.183A3.498 3.498 0 0 1 8 10.5c1.295 0 2.426.703 3.032 1.75a.5.5 0 0 0 .866-.5A4.498 4.498 0 0 0 8 9.5a4.5 4.5 0 0 0-3.898 2.25.5.5 0 0 0 .183.683zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5z"/>
  </svg> </h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,class: "password-form"  }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-floating"  width=500px >

    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control", id: "email", placeholder: "name@example.com" %>
    <%= f.label :email,"Email" %><br />
  </div>

  <div class="actions">
    <%= button_to "Send me reset password instructions", new_password_path(resource_name) %>
  </div>

<% end %>

<p></p><%= render "devise/shared/links" %>
</main>
</body>
</html>